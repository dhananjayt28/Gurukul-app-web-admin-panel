@model GurukulAppAdminPanel.Models.SatsangManagement
    
<link href="@Url.Content("~/Content/dataTables.min.css")" rel="stylesheet">
<div class="right_col" role="main">
    <div class="row">
        <ul id="breadcrumb">
            <li><a href="@ViewBag.breadcrumbHomeURL"><i class="fa fa-home mar_right_5" aria-hidden="true"></i> @ViewBag.breadcrumbHome </a></li>
            <li><a href="javascript:void();"><i class="fa fa-code-fork mar_right_5" aria-hidden="true"></i> @ViewBag.breadcrumbController </a></li>
            <li><a href="javascript:void();"><i class="fa fa-table mar_right_5" aria-hidden="true"></i> @ViewBag.breadcrumbAction </a></li>
        </ul>
    </div>
    <p>@TempData["CHP_MSG"]</p>
    <div class="row" style="margin-top:20px">
        <div class="panel panel-default widget1">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-table"></i> @ViewBag.breadcrumbAction </h4>
            </div>
            <div class="panel-body pull-right">
                <a href="@Url.Action("","chapter/chapter-add")" class="btn btn-default"><i class="fa fa-plus"></i> Add Chapter</a>
            </div>
                <div class="panel-body">
                    <table class="table table-responsive kullaniciTablosu" id="eventTabledata" style="border: 1px solid#eee;background: #ffffff">
                        <thead>
                            <tr>
                                <th>Sl. No</th>
                                <th>Country</th>
                                <th>Chapter Name</th>
                                <th>Description</th>      
                                <th>City Name</th>                          
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ChapterList.Count > 0)
                            {
                                int i = 0;
                                foreach (Dictionary<string, object> _data in Model.ChapterList)
                                {
                                    ++i;
                                    <tr>
                                        <td>@i</td>
                                        <td>@_data["COUNTRY_NAME"]</td>
                                        <td>@_data["CHAPTER_NAME"]</td>
                                        <td>@_data["DESCRIPTION"]</td>
                                        <td>@_data["CITY_NAME"]</td>                                        
                                        @*<td></td>*@
                                    </tr>
                                }
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/dataTables.min.js")"></script>
<script>
    $(document).ready(function () {
        $('#eventTabledata').DataTable();
    });
</script>