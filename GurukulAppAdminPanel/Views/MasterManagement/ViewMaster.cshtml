<div class="modal fade" id="DeleteSubMasterCategoryModal" role="dialog">
    <div class="modal-dialog  panal-modal">

        <!-- Modal content-->
        <div class="modal-content" style="box-shadow: 2px 2px 3px #333;">
            <div class="subCategory-modal-header" style="background:rgb(7,71,166) !important; color:#fff;">
                <button type="button" class="close" data-dismiss="modal" style="color: #fff; opacity: 1 !important;">&times;</button>
                <h4 class="modal-title">Delete Sub Category</h4>
            </div>
